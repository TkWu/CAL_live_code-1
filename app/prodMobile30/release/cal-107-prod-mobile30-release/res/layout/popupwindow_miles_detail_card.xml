<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/root" android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/rl_bg" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:id="@id/rl_black" android:background="@color/black_60" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/rl_card" android:padding="10.0px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <RelativeLayout android:id="@id/rl_head" android:background="@drawable/bg_miles_detail_card_head_radius" android:paddingLeft="20.0px" android:paddingRight="20.0px" android:layout_width="fill_parent" android:layout_height="70.0px">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <TextView android:textSize="18.0px" android:textColor="@color/black_one" android:id="@id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Taipei to Los Angeles" style="@style/regular" />
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="13.0px" android:textColor="@color/grey_four" android:id="@id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4.0px" android:text="Sep 10, 2015" style="@style/light" />
                    <TextView android:textSize="13.0px" android:textColor="@color/white_four" android:gravity="center" android:layout_gravity="center_vertical" android:id="@id/tv_transfer" android:background="@drawable/bg_transfer_gray" android:visibility="gone" android:layout_width="70.0px" android:layout_height="16.0px" android:layout_marginLeft="5.0px" android:text="@string/transfer" style="@style/regular" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="24.0px" android:textColor="@color/french_blue" android:id="@id/tv_miles" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+6,800" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/light" />
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/ll_body" android:background="@drawable/bg_manage_miles_body_radius" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/rl_head">
            <LinearLayout android:orientation="vertical" android:id="@id/ll_name_data" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <RelativeLayout android:id="@id/rl_due_date" android:layout_width="fill_parent" android:layout_height="50.0px" android:layout_below="@id/ll_name_data">
                <TextView android:textSize="16.0px" android:textColor="@color/grey_four" android:id="@id/tv_due_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20.0px" android:text="@string/due_date" android:layout_centerVertical="true" style="@style/light" />
                <TextView android:textSize="16.0px" android:textColor="@color/black_one" android:id="@id/tv_due_date_data" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40.0px" android:layout_marginTop="4.0px" android:layout_marginRight="20.0px" android:text="Sep 10, 2015" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/light" />
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/ll_other_data" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/rl_due_date" />
        </LinearLayout>
        <RelativeLayout android:id="@id/rl_not_in_use" android:background="@drawable/bg_miles_award_not_in_use" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="32.0px" android:layout_below="@id/ll_body">
            <TextView android:textSize="13.0px" android:textColor="@color/white_four" android:gravity="center" android:id="@id/tv_not_in_use" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="20.0px" android:layout_marginRight="20.0px" android:text="@string/not_in_use" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="@style/medium" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/rl_ticket_issued" android:background="@drawable/bg_miles_award_ticket_issued" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="32.0px" android:layout_below="@id/ll_body">
            <TextView android:textSize="13.0px" android:textColor="@color/white_four" android:gravity="center" android:id="@id/tv_ticket_issued" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="20.0px" android:layout_marginRight="20.0px" android:text="@string/ticket_issued" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="@style/medium" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageButton android:id="@id/ibtn_close" android:background="@color/transparent" android:layout_width="40.0px" android:layout_height="40.0px" android:layout_marginBottom="16.0px" android:src="@drawable/bg_btn_about_delete_onclick" android:scaleType="fitXY" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
</RelativeLayout>