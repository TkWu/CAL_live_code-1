<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0px">


    <View
        android:id="@+id/v_line_top"
        android:background="@color/warm_grey_50"
        android:alpha="0.4"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="20.3dp"
        android:paddingBottom="20.3dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/light"
            android:textColor="@color/black_one"
            android:textSize="18dp"
            android:text="question  "
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:id="@+id/rl_progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/seekbar_progress_default"/>
        </RelativeLayout>


    </LinearLayout>


    <View
        android:id="@+id/v_line_bottom"
        android:background="@color/warm_grey_50"
        android:alpha="0.4"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="1dp"
        />

</LinearLayout>
