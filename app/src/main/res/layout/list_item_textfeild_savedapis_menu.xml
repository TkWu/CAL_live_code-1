<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_docinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="10px"
        >

        <RelativeLayout
            android:id="@+id/rl_doc_common_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40px"
            android:paddingBottom="1px">

            <TextView
                android:id="@+id/tv_docfreename_value"
                android:paddingLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="鄭宇容"
                android:textColor="@color/alert_dialog_background"
                android:textSize="18px"
                style="@style/regular" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_doc_common_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40px">

            <TextView
                android:id="@+id/tv_doctype_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="30px"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white_four"
                android:layout_centerVertical="true"
                android:text="@string/document_type"
                android:textSize="16px"
                style="@style/regular" />

            <TextView
                android:id="@+id/tv_doctype_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingRight="30px"
                android:textColor="@color/white_four"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:text="鄭宇容"
                android:textSize="16px"
                style="@style/light" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_doc_common_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40px"
            >

            <TextView
                android:id="@+id/tv_docattrs1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="30px"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white_four"
                android:layout_centerVertical="true"
                android:text="@string/document_number"
                android:textSize="16px"
                style="@style/light" />

            <TextView
                android:id="@+id/tv_docattrs1_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingRight="30px"
                android:textColor="@color/white_four"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:text="鄭宇容"
                android:textSize="16px"
                style="@style/light" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_doc_common_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40px">

            <TextView
                android:id="@+id/tv_docattrs2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="30px"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white_four"
                android:layout_centerVertical="true"
                android:text="@string/date_of_expiry"
                android:textSize="16px"
                style="@style/regular" />

            <TextView
                android:id="@+id/tv_docattrs2_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingRight="30px"
                android:textColor="@color/white_four"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:text="鄭宇容"
                android:textSize="16px"
                style="@style/regular" />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/v_line7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.4"
        android:background="@color/warm_grey_50"
        android:paddingLeft="20px"
        android:paddingRight="20px" />
</LinearLayout>