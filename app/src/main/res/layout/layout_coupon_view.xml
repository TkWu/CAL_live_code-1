<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:onClick="true"
    android:paddingLeft="10px"
    android:paddingRight="10px">

    <ImageView
        android:id="@+id/iv_coupon"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/promotions_img_test" />

    <RelativeLayout
        android:id="@+id/rl_discount"
        android:layout_width="186px"
        android:layout_height="33px"
        android:layout_alignBottom="@+id/iv_coupon"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_coupon_tag">

        <TextView
            android:id="@+id/tv_discount"
            style="@style/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6px"
            android:layout_marginLeft="23.7px"
            android:layout_marginTop="12.3px"
            android:text="@string/discount"
            android:textColor="@color/white_four"
            android:textSize="13px" />

        <TextView
            android:id="@+id/tv_number"
            style="@style/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5px"
            android:layout_toLeftOf="@+id/tv_off"
            android:text="10%"
            android:textColor="@color/white_four"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_off"
            style="@style/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_marginBottom="6px"
            android:layout_marginRight="10px"
            android:layout_marginTop="12.3px"
            android:text="OFF"
            android:textColor="@color/white_four"
            android:textSize="13px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="71.3px"
        android:layout_below="@+id/iv_coupon"
        android:background="@drawable/bg_promotion_text">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/regular"
                android:layout_width="300px"
                android:layout_height="28.7px"
                android:layout_gravity="center_horizontal"
                android:text="Duty Free Goods Discount , Free"
                android:textColor="@color/black_one"
                android:textSize="20px" />

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sub_title"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="18.7px"
                    android:layout_marginTop="4px"
                    android:text="@string/valid_date"
                    android:textColor="@color/grey_four"
                    android:textSize="13px" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="18.7px"
                    android:layout_marginTop="4px"
                    android:layout_marginLeft="5px"
                    android:text="@string/valid_date"
                    android:textColor="@color/grey_four"
                    android:textSize="13px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_div"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_below="@+id/rl_content"
        android:background="@color/transparent" />
</RelativeLayout>
