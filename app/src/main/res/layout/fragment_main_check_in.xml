<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ci.function.HomePage.CIMainInfoView
            android:id="@+id/vInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </ci.function.HomePage.CIMainInfoView>

        <ci.function.HomePage.CIMainBoardingPassInfoView
            android:id="@+id/vBoardingPassView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </ci.function.HomePage.CIMainBoardingPassInfoView>

        <Button
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="@string/check_in"
            android:id="@+id/btn_checkin"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white_four"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_pinkish_red_selector"
            android:layout_below="@+id/vInfoView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            style="@style/regular" />

        <include
            android:id="@+id/vCheckInInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            layout="@layout/layout_main_hp_defgh_info_view"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>
