<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_apis_card_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_press_black20"
        android:clickable="true">

        <View
            android:id="@+id/v_marginTop"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/transparent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_tv"
            android:layout_width="266px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_marginTop"
            android:layout_marginBottom="14.3px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="14.3px"
            android:minHeight="70px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="19.3px"
                android:text="@string/passport"
                android:textColor="@color/black_one"
                android:textSize="16px"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/light" />

            <TextView
                android:id="@+id/tv_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:minHeight="16px"
                android:text="No: 214188500"
                android:textColor="@color/grey_four"
                android:textSize="13px"
                style="@style/light" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibtn_arrow"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_list_arrow_g" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rlayout"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:alpha="0.4"
        android:background="@color/warm_grey_50" />

</RelativeLayout>