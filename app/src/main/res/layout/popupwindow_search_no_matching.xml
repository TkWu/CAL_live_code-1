<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_60">
        <TextView
            android:id="@+id/no_matching_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_matching_result_found_title"
            android:textColor="@color/white_four"
            style="@style/regular"/>
        <TextView
            android:id="@+id/no_matching_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_matching_title"
            android:text="@string/no_matching_result_found"
            android:textColor="@color/white_four"
            style="@style/light"/>
</RelativeLayout>