<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="184.7px"
        android:layout_marginBottom="10px"
        android:background="@drawable/bg_checkin_completed_passenger_body">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:text="Ryan"
            android:id="@+id/tv_name"
            android:layout_gravity="center_horizontal"
            android:textSize="20px"
            android:textColor="@color/black_one"
            android:background="@drawable/bg_checkin_completed_passenger_head"
            android:gravity="center|left"
            android:paddingStart="20px"
            android:paddingEnd="20px"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:paddingEnd="20px"
            android:paddingStart="20px">

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:id="@+id/iv_boarding_pass"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_boarding_pass_b"
                android:background="@color/transparent"/>

            <TextView
                android:layout_width="168px"
                android:layout_height="wrap_content"
                android:id="@+id/tv_boarding_pass"
                android:layout_centerVertical="true"
                android:text="@string/check_in_boarding_pass"
                android:textColor="@color/black_one"
                android:textSize="16px"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/iv_boarding_pass"
                android:layout_marginLeft="18px"
                style="@style/light" />

            <Button
                android:layout_width="80px"
                android:layout_height="32px"
                android:id="@+id/btn_view"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="@string/boardingpass_print"
                android:textSize="13px"
                android:textColor="@color/french_blue"
                android:background="@drawable/bg_btn_check_in_view"
                style="@style/regular" />

            <TextView
                android:id="@+id/tv_unboarding_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/due_to_local_government_regulations"
                android:textColor="@color/black_one"
                android:textSize="16px"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/iv_boarding_pass"
                android:layout_marginLeft="18px"
                android:layout_marginRight="20px"
                style="@style/light"
                android:visibility="invisible"/>

        </RelativeLayout>
        <View
            android:id="@+id/vDiv"
            android:layout_height="0.7px"
            android:layout_width="match_parent"
            android:background="@color/warm_grey_50"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:paddingEnd="20px"
            android:paddingStart="20px">

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:id="@+id/iv_seat"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_seat_b"
                android:background="@color/transparent"/>

            <TextView
                android:layout_width="168px"
                android:layout_height="wrap_content"
                android:id="@+id/tv_seat"
                android:layout_centerVertical="true"
                android:text="3K"
                android:textColor="@color/black_one"
                android:textSize="16px"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/iv_seat"
                android:layout_marginLeft="18px"
                style="@style/light" />

            <ImageButton
                android:layout_width="24px"
                android:layout_height="24px"
                android:id="@+id/ivbtn_edit"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_edit"
                android:scaleType="fitXY" />
            <Button
                android:layout_width="80px"
                android:layout_height="32px"
                android:id="@+id/btn_select"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="@string/select"
                android:textSize="13px"
                android:textColor="@color/french_blue"
                android:background="@drawable/bg_btn_check_in_view"
                style="@style/regular"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>