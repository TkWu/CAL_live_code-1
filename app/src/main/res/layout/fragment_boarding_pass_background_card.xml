<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10px"
    android:paddingRight="10px">

    <RelativeLayout
        android:id="@+id/rl_boarding_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="74.5px"
            android:background="@drawable/bg_boardimg_pass_head_radius">

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_hole"
            android:layout_width="match_parent"
            android:layout_height="12px"
            android:layout_below="@+id/rl_head"
            android:scaleType="fitXY"
            android:src="@drawable/bg_card_hole"/>

        <TextView
            android:id="@+id/tv_name"
            style="@style/regular"
            android:layout_width="240px"
            android:layout_height="24px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="23px"
            android:textColor="@color/black_one"
            android:textSize="20px"/>

        <TextView
            android:id="@+id/tv_bookticket"
            style="@style/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_marginTop="54.5px"
            android:textColor="@color/black_one"
            android:textSize="13px"/>
        
        <ImageView
            android:id="@+id/iv_boarding_pass_info"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21px"
            android:layout_marginRight="20px"
            android:scaleType="fitXY"
            android:background="@drawable/ic_boardingpass_info"/>


        <ci.ui.view.DashedLine
            android:id="@+id/dl"
            android:layout_width="319.2px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            app:dl_color="@color/greyish_two"/>


        <ci.ui.view.ShadowBar.ShadowBarScrollview
            android:id="@+id/sv_bottom"
            android:layout_width="match_parent"
            android:layout_height="417px"
            android:layout_below="@+id/iv_hole"
            android:background="@drawable/bg_boardimg_pass_body_radius"/>

    </RelativeLayout>

</LinearLayout>