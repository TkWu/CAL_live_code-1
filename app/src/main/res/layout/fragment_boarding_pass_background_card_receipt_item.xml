<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_radius_3dp_stroke_white_four">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="240px"
        android:layout_height="24px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8.4px"
        android:layout_marginLeft="14.6px"
        android:gravity="left|bottom"
        android:letterSpacing="0.04"
        android:textSize="16px"
        android:textColor="@color/black_one"
        style="@style/regular"
        android:text="Test"/>

    <ImageView
        android:id="@+id/iv_barcode"
        android:layout_width="240px"
        android:layout_height="32px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="13px"
        android:layout_marginLeft="2px"
        android:layout_marginBottom="35.4px"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_bag_num"
        android:layout_width="120px"
        android:layout_height="17px"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14.6px"
        android:layout_marginBottom="12px"
        android:gravity="left|center"
        android:letterSpacing="0.04"
        android:textSize="13px"
        android:textColor="@color/brownish_grey"
        style="@style/light"
        android:text="CI 123456"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/greyish_two"
        android:layout_toLeftOf="@+id/iv_arrow"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="32px"
        android:layout_height="32px"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_card_arrow"
        android:scaleType="fitXY"/>

</RelativeLayout>