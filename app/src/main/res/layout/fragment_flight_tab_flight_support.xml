<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340px"
    android:layout_height="190px"
    android:background="@drawable/bg_flight_tab_flight_support"
    android:id="@+id/root">

    <LinearLayout
        android:id="@+id/llayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.3px"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_title"
            android:layout_width="2px"
            android:layout_height="16px"
            android:layout_marginTop="11px"
            android:background="@drawable/trip_detail_view_blue"></View>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9px"
            android:layout_marginLeft="7.3px"
            android:text="@string/trips_detail_extra_services"
            android:textColor="@color/french_blue"
            android:textSize="16px"
            style="@style/regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40px"
        android:orientation="vertical"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px">
        <RelativeLayout
            android:id="@+id/rl_global_service_hotline_click"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@drawable/bg_transparent_press_black20"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="16px"
                android:text="@string/global_service_hotline"
                style="@style/light" />
            <ImageView
                android:id="@+id/iv_ic_list_arrow_g1"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_list_arrow_g"/>
        </RelativeLayout>
        <View
            android:id="@+id/vline_meal"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.39"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_passenger_card_line_50" />
        <RelativeLayout
            android:id="@+id/rl_phone_click"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="20px"
            android:clickable="true"
            android:background="@drawable/bg_transparent_press_black20">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_french_blue_stroke_radius3dp_width1dp"/>
            <ImageView
                android:id="@+id/iv_ic_phone_b"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="58.8px"
                android:background="@drawable/ic_phone_b"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/iv_ic_phone_b"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_flight_support_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/french_blue"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="16px"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/regular" />
                <TextView
                    android:id="@+id/tv_flight_support_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/french_blue"
                    android:alpha="0.69"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="16px"
                    style="@style/regular" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25px"
        android:visibility="gone"/>

</RelativeLayout>