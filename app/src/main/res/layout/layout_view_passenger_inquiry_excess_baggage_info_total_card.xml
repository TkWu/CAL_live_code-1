<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_total"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="26.7px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:textSize="18px"
            android:textColor="@color/white_four"
            android:text="@string/trip_detail_passenger_bag_eb_total"
            android:gravity="center_vertical"
            style="@style/regular" />

        <TextView
            android:id="@+id/tv_ebamount"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="18px"
            android:layout_alignBottom="@+id/tv_value"
            android:layout_marginRight="30px"
            android:textColor="@color/white_four"
            android:gravity="center_vertical|right"
            android:text="TWD 8,888"
            style="@style/regular" />

    </RelativeLayout>

</LinearLayout>