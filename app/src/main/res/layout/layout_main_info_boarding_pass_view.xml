<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_page_already_have_a_trip"
        android:id="@+id/tvTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13.3dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white_four"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/regular"
        android:shadowColor="@color/dark_navy_blue_50"
        android:shadowRadius="4"
        android:shadowDx="3"
        android:shadowDy="3"/>

    <ImageView
        android:layout_width="156.7dp"
        android:layout_height="156.7dp"
        android:id="@+id/imgIcon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8.7dp"
        android:src="@drawable/ic_homepage_a"
        android:background="@color/transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_page_already_have_a_trip"
        android:id="@+id/tvText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white_four"
        style="@style/medium"
        android:shadowColor="@color/dark_navy_blue_50"
        android:shadowRadius="4"
        android:shadowDx="3"
        android:shadowDy="3"/>

</LinearLayout>
