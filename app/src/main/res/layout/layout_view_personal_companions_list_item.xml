<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_press_black20"
        android:clickable="true"
        android:paddingBottom="15.7px"
        android:paddingLeft="30px"
        android:paddingRight="20px"
        android:paddingTop="16px">

        <ImageButton
            android:id="@+id/ibtn_arrow"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_list_arrow" />

        <LinearLayout
            android:layout_width="266px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/ibtn_arrow">

            <TextView
                android:id="@+id/tv_apis_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="19.3px"
                android:text="@string/passport"
                android:textColor="@color/white_four"
                android:textSize="16px"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/regular" />

            <TextView
                android:id="@+id/tv_apis_no"
                android:layout_width="match_parent"
                android:layout_height="16px"
                android:layout_marginTop="3px"
                android:alpha="0.8"
                android:text="@string/passport"
                android:textColor="@color/white_four"
                android:textSize="13px"
                style="@style/regular" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vDiv"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.3"
        android:background="@color/white_four" />

</LinearLayout>
