<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_eight_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llayout_select_search_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">

        <RelativeLayout
            android:id="@+id/rlayout_departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10px">

            <ImageView
                android:id="@+id/radio_departure_date"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_marginRight="8px"
                android:background="@drawable/btn_radio_on" />

            <TextView
                android:id="@+id/tv_departure_date"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/radio_departure_date"
                android:text="@string/departure_date"
                android:textColor="@color/white_four"
                android:textSize="16px"
                style="@style/light"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlayout_arrival_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/rlayout_departure_date"
            android:layout_marginLeft="20px">

            <ImageView
                android:id="@+id/radio_arrival_date"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_marginRight="8px"
                android:background="@drawable/btn_radio_off" />

            <TextView
                android:id="@+id/tv_arrival_date"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/radio_arrival_date"
                android:text="@string/arrival_date"
                android:textColor="@color/white_four"
                android:textSize="16px"
                style="@style/light"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:background="@drawable/bg_select_eight_day_black_30">
        <RelativeLayout
            android:id="@+id/rlayout_title_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">
            <View
                android:id="@+id/line_title1"
                android:layout_width="90px"
                android:layout_height="0.7px"
                android:layout_marginLeft="30.1px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="#30ffffff" />
            <TextView
                android:id="@+id/tv_month_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white_four"
                style="@style/light"/>
            <View
                android:id="@+id/line_title2"
                android:layout_width="90px"
                android:layout_height="0.7px"
                android:layout_marginRight="30px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#30ffffff" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"/>

        <GridView
            android:id="@+id/grid_eight_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_marginRight="34px"
            android:numColumns="4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="9.3px"/>
    </LinearLayout>

</LinearLayout>