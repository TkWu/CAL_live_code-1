<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="32px"
        android:background="@color/black_30">
        <TextView
            android:id="@+id/tv_multi_stop_value"
            android:layout_width="match_parent"
            android:layout_height="22.7px"
            android:singleLine="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:text="@string/book_ticket_multi_stop_flight"
            android:textSize="16px"
            android:gravity="center_vertical"
            android:textColor="@color/white_four"
            style="@style/regular"/>

        <ImageView
            android:id="@+id/iv_garbage"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:background="@drawable/bg_transparent_press_black20"
            android:src="@drawable/ic_garbage_w"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"/>

    <FrameLayout
        android:id="@+id/fl_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6px"/>

    <FrameLayout
        android:id="@+id/fl_departure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6px"/>

</LinearLayout>