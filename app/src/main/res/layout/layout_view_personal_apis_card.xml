<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_apis_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:background="@drawable/bg_miles_detail_card_head_radius"
        android:paddingLeft="20px">

        <LinearLayout
            android:layout_width="256px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="24px"
                android:singleLine="true"
                android:text="@string/my_apis"
                android:textColor="@color/black_one"
                android:textSize="20px"
                style="@style/regular" />

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3px"
                android:minHeight="16px"
                android:text="@string/advance_passenger_information_system"
                android:textColor="@color/grey_four"
                android:textSize="13px"
                style="@style/light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="64px"
            android:layout_height="64px"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20px"
            android:gravity="right|center_vertical">
            <ImageButton
                android:id="@+id/ibtn_add"
                android:layout_width="24px"
                android:layout_height="24px"
                android:background="@drawable/bg_transparent_press_black20"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_g"
                android:clickable="false"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_head"
        android:background="@drawable/bg_manage_miles_body_radius"
        android:orientation="vertical"
        android:paddingBottom="20px">

        <TextView
            android:id="@+id/tv_no_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="28px"
            android:gravity="center_horizontal"
            android:text="@string/no_apis"
            android:textColor="@color/black_one"
            android:textSize="20px"
            style="@style/light" />

    </LinearLayout>

</LinearLayout>