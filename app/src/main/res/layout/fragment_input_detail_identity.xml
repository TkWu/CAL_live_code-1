<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        style="@style/light"
        android:text="@string/input_detail_request_user_id"
        android:textColor="@color/white_four"
        android:textSize="16px" />

    <FrameLayout
        android:id="@+id/fl_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="336.7px"></FrameLayout>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="320px"
        android:layout_height="40px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px"
        android:background="@drawable/bg_btn_pinkish_red_selector"
        android:text="@string/inquiry_input_box_send"
        android:textAllCaps="false"
        android:textColor="@color/white_four"
        android:textSize="16px"
        style="@style/regular"/>

</RelativeLayout>
