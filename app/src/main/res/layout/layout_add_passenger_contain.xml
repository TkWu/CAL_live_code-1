<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="300px"
        android:layout_height="42.7px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:text="Add passengersâ€™ name to manage in the\nsame trip"
        android:textColor="@color/white_four"
        android:textSize="16px"
        style="@style/regular"/>

    <TextView
        android:id="@+id/tv_add_head"
        android:layout_width="match_parent"
        android:layout_height="32px"
        android:layout_marginTop="40px"
        android:background="@color/black_30"
        android:gravity="left|center_vertical"
        android:paddingLeft="30px"
        android:text="@string/add_passenager_passenager_x"
        android:textColor="@color/white_four"
        android:textSize="16px"
        style="@style/regular"/>

    <FrameLayout
        android:id="@+id/fragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:background="@drawable/bg_transparent_press_black20"
            android:scaleType="fitXY"
            android:src="@drawable/btn_add_n"/>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10px"
            android:text="@string/add_passenager_add_more"
            android:textColor="@color/white_four"
            android:textSize="16px"
            style="@style/light"/>
    </LinearLayout>
</LinearLayout>