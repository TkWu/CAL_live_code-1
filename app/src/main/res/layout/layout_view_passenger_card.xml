<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_passenger_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/ll_passenger_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_flight_info_head_radius"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_passenger_name"
            style="@style/regular"
            android:layout_width="300dp"
            android:layout_height="24dp"
            android:textColor="@color/black_one"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rl_join_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_passenger_name"
            android:layout_marginTop="20.7dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_join_member"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/join_member"
                android:textAllCaps="false"
                android:textColor="@color/pinkish_red"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/ibtn_join_member"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/btn_join_member"
                android:background="@drawable/bg_transparent_press_black20"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_r" />

        </RelativeLayout>
        <View
            android:id="@+id/v_gap_name_card"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <RelativeLayout
            android:id="@+id/rl_card_and_miles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="26.7dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_gold_card" />

            <TextView
                android:id="@+id/tv_card_number"
                style="@style/regular"
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.7dp"
                android:layout_marginRight="16.7dp"
                android:layout_toRightOf="@+id/iv_card"
                android:textColor="@color/black_three"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_miles"
                style="@style/regular"
                android:layout_width="160dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="@string/menu_miles"
                android:textColor="@color/black_three"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/v_gap_card_number"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <RelativeLayout
            android:id="@+id/rl_add_member_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_transparent_press_black20"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:clickable="true"
            android:layout_marginBottom="20dp"
             >

            <TextView
                android:id="@+id/tv_add_member_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_member_card"
                android:textColor="@color/pinkish_red"
                android:layout_centerVertical="true"
                android:textSize="16px"
                style="@style/regular"/>

            
            <ImageView
                android:id="@+id/iv_add_member_card"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_marginLeft="3px"
                android:src="@drawable/ic_arrow_r"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_add_member_card"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_check_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_check_in"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_pinkish_red_selector"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/check_in"
                android:textAllCaps="false"
                android:textColor="@color/white_four"
                android:textSize="16sp" />

            <View
                android:id="@+id/v_check_in_margin"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@+id/btn_check_in" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_boarding_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_boarding_pass"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_pinkish_red_selector"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/boarding_pass"
                android:textAllCaps="false"
                android:textColor="@color/white_four"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_cancel_check_in"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@+id/btn_boarding_pass"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel_check_in"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/cancel_check_in"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_four"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ibtn_cancel_check_in"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/btn_cancel_check_in"
                    android:background="@drawable/bg_transparent_press_black20"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_arrow_g" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_passenger_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_passenger_name"
        android:background="@color/white_five"
        android:orientation="vertical"
        android:paddingLeft="20.3dp"
        android:paddingRight="19.7dp">

        <RelativeLayout
            android:id="@+id/rl_seat"
            android:layout_width="match_parent"
            android:layout_height="60.7dp">

            <ImageView
                android:id="@+id/iv_seat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_seat_b" />

            <RelativeLayout
                android:id="@+id/rl_select_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_seat"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_seat"
                    style="@style/light"
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="@string/seat"
                    android:textColor="@color/grey_four"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_seat_select"
                    style="@style/regular"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_btn_pinkish_red_selector"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/trips_detail_select"
                    android:textAllCaps="false"
                    android:textColor="@color/white_four"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_seat_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_seat"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_seat_data"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_seat_data_title"
                        style="@style/light"
                        android:layout_width="match_parent"
                        android:layout_height="15.7dp"
                        android:textColor="@color/grey_four"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_seat_data"
                        style="@style/light"
                        android:layout_width="match_parent"
                        android:layout_height="19.3dp"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/black_one"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibtn_seat_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_transparent_press_black20"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_seat_invalid"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/trips_detail_invalid"
                android:textColor="@color/greyish"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_seat_close"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/trips_detail_invalid"
                android:textColor="@color/grey_four"
                android:textSize="13sp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp">

            <View
                android:id="@+id/vline_meal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="@color/warm_grey_50" />

            <ImageView
                android:id="@+id/iv_meal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/vline_meal"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_meal_b" />

            <RelativeLayout
                android:id="@+id/rl_meal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline_meal"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_meal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_meal"
                    style="@style/light"
                    android:layout_width="158dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="@string/meal"
                    android:textColor="@color/grey_four"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_meal_data_text"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_meal_select"
                style="@style/regular"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/vline_meal"
                android:background="@drawable/bg_btn_pinkish_red_selector"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/trips_detail_select"
                android:textAllCaps="false"
                android:textColor="@color/white_four"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/rl_meal_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline_meal"
                android:layout_toEndOf="@+id/iv_meal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/ibtn_meal_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toLeftOf="@+id/ibtn_meal_garbage"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_transparent_press_black20"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_edit" />

                <ImageButton
                    android:id="@+id/ibtn_meal_garbage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_transparent_press_black20"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_garbage_g" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_meal_invalid"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/vline_meal"
                android:layout_marginTop="21.7dp"
                android:text="@string/trips_detail_invalid"
                android:textColor="@color/greyish"
                android:textSize="13sp"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vline_bag"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="@color/warm_grey_50" />

            <ImageView
                android:id="@+id/iv_bag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/vline_bag"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baggage_b" />

            <LinearLayout
                android:id="@+id/ll_bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline_bag"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@id/iv_bag"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_freebag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_freebag_title"
                        style="@style/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_bag"
                        android:gravity="center_vertical"
                        android:text="@string/trip_detail_passenger_free_bag_title"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_freebag_value"
                        style="@style/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_bag"
                        android:gravity="center_vertical"
                        android:text="20Kg"
                        android:textColor="@color/black_one"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_buybag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_buybag_title"
                        style="@style/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_bag"
                        android:gravity="center_vertical"
                        android:text="@string/extra_service_title_extra_baggage"
                        android:textColor="@color/brownish_grey"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_buybag_value"
                        style="@style/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_bag"
                        android:gravity="center_vertical"
                        android:text="20Kg"
                        android:textColor="@color/black_one"
                        android:textSize="13sp"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_bag_edit"
                style="@style/regular"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/vline_bag"
                android:background="@drawable/bg_btn_pinkish_red_selector"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="加購"
                android:textAllCaps="false"
                android:textColor="@color/white_four"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_bag_ewallet"
                style="@style/regular"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/vline_bag"
                android:layout_marginTop="13dp"
                android:background="@drawable/bg_passenger_btn_selector"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/trip_detail_passenger_bag_ewallet"
                android:textAllCaps="false"
                android:textColor="@color/french_blue"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_bag_invalid"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/vline_bag"
                android:layout_marginTop="21.7dp"
                android:text="@string/trips_detail_invalid"
                android:textColor="@color/greyish"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_bag_close"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/vline_bag"
                android:layout_marginTop="21.7dp"
                android:text="@string/trips_detail_invalid"
                android:textColor="@color/grey_four"
                android:textSize="13sp"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bag_tracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vline_bag_tracking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="@color/warm_grey_50" />

            <ImageView
                android:id="@+id/iv_bag_tracking"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/vline_bag_tracking"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baggage_tracing" />

            <LinearLayout
                android:id="@+id/ll_bag_tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline_bag_tracking"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@id/iv_bag_tracking"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">


            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vline_vip"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="@color/warm_grey_50" />

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/vline_vip"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_vip_b" />

            <TextView
                android:id="@+id/tv_vip"
                style="@style/light"
                android:layout_width="158dp"
                android:layout_height="60dp"
                android:layout_below="@+id/vline_vip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@id/iv_vip"
                android:gravity="center_vertical"
                android:text="@string/vip_lounge"
                android:textColor="@color/black_one"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_extra_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <View
                android:id="@+id/vline_extra_service"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="@color/warm_grey_50" />

            <ImageView
                android:id="@+id/iv_extra_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/vline_extra_service"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_extra_services_b" />

            <LinearLayout
                android:id="@+id/ll_extra_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline_extra_service"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@id/iv_extra_service"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_extra_service"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/extra_services"
                    android:textColor="@color/grey_four"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/rl_hsr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ci.ui.view.DashedLine
                        android:id="@+id/dl_hsr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        app:dl_color="@color/warm_grey_50" />

                    <TextView
                        android:id="@+id/tv_hsr"
                        style="@style/light"
                        android:layout_width="158dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/dl_hsr"
                        android:gravity="center_vertical"
                        android:text="@string/trips_detail_hsr"
                        android:textColor="@color/black_one"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_hsr"
                        style="@style/regular"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/dl_hsr"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_passenger_btn_selector"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/view"
                        android:textAllCaps="false"
                        android:textColor="@color/french_blue"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ci.ui.view.DashedLine
                        android:id="@+id/dl_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        app:dl_color="@color/warm_grey_50" />

                    <TextView
                        android:id="@+id/tv_wifi"
                        style="@style/light"
                        android:layout_width="158dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/dl_wifi"
                        android:gravity="center_vertical"
                        android:text="@string/wifi"
                        android:textColor="@color/black_one"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_wifi"
                        style="@style/regular"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/dl_wifi"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_passenger_btn_selector"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/view"
                        android:textAllCaps="false"
                        android:textColor="@color/french_blue"
                        android:textSize="13sp" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_ques"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_passenger_info"
        android:background="@drawable/bg_main_flight_info_body_radius_gray">

        <View
            android:id="@+id/vline_ques"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.4"
            android:background="@color/warm_grey" />

        <ImageView
            android:id="@+id/iv_ques"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_survey"/>

        <TextView
            android:id="@+id/tv_ques"
            style="@style/light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/iv_ques"
            android:text="@string/rate_this_trip"
            android:gravity="center_vertical"
            android:textColor="@color/grey_four"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_ques_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="121.3dp"
            android:src="@drawable/ic_about_gray"/>

        <Button
            android:id="@+id/btn_ques"
            style="@style/regular"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_pinkish_red_selector"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/trips_detail_select"
            android:textAllCaps="false"
            android:textColor="@color/white_four"
            android:layout_marginRight="19.7dp"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ticket_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ques"
        android:background="@color/white_five">

        <View
            android:id="@+id/vline_ticket_number"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.4"
            android:background="@color/warm_grey" />

        <TextView
            android:id="@+id/tv_ticket_text"
            style="@style/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vline_ticket_number"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.3dp"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:text="@string/ticket_number"
            android:textColor="@color/grey_four"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_ticket_number_data"
            style="@style/regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vline_ticket_number"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/tv_ticket_text"
            android:layout_toStartOf="@+id/btn_ticket_modifly"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:textColor="@color/black_two"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_ticket_modifly"
            style="@style/regular"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_pinkish_red_selector"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/ticket_modifly"
            android:textAllCaps="false"
            android:textColor="@color/white_four"
            android:layout_marginEnd="19.7dp"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_online_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ticket_number"
        android:background="@drawable/bg_passenger_online_check_in"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_no_online_check_in"
            style="@style/medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="40dp"
            android:text="@string/online_check_in_is_not_available"
            android:textColor="@color/white_four"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:id="@+id/vDiv"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_no_online_check_in"
        android:background="@color/transparent" />
</RelativeLayout>
