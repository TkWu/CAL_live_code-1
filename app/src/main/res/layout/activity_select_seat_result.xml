<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/bg_login"
    android:fitsSystemWindows="true">

    <ci.ui.view.NavigationBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/lv_select_seat_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_above="@+id/m_ConfirmButton"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:divider="#00000000"/>

    <RelativeLayout
        android:id="@+id/m_ConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="30px">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_btn_pinkish_red_selector"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="16px"
            style="@style/regular"/>
    </RelativeLayout>

    <View
        android:id="@+id/vGradient"
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:visibility="gone"
        android:layout_alignBottom="@+id/lv_select_seat_card"
        android:background="@drawable/bg_listview_bottom_gradient" />

</RelativeLayout>