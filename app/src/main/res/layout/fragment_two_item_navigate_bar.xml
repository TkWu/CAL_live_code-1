<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="320px"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:id="@+id/rl_left_bg"
            android:layout_width="159.5px"
            android:layout_height="40px"
            android:background="@drawable/bg_btn_right_radius_french_blue_40">

            <TextView
                android:id="@+id/tv_left_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="left item"
                android:textColor="@color/white_four"
                android:textSize="14px"
                style="@style/regular" />

        </RelativeLayout>

        <View
            android:id="@+id/v_line1"
            android:layout_width="1px"
            android:layout_height="40px"
            android:background="@color/white_four" />

        <RelativeLayout
            android:id="@+id/rl_right_bg"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@drawable/bg_btn_right_radius_white">

            <TextView
                android:id="@+id/tv_right_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="right item"
                android:textColor="@color/french_blue"
                android:textSize="14px"
                style="@style/regular" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_bg"
        android:layout_width="320px"
        android:layout_height="40px"
        android:background="@drawable/bg_btn_radius_white" />
</RelativeLayout>