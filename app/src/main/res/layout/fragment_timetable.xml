<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:splitMotionEvents="false">

    <FrameLayout
        android:id="@+id/fl_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px">
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_select">

        <FrameLayout
            android:id="@+id/fragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26px"
            android:layout_marginLeft="20px"
            android:paddingRight="72px"/>

        <ImageButton
            android:id="@+id/btn_change_airport"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="71.3px"
            android:background="@drawable/btn_transform_n"/>

        <FrameLayout
            android:id="@+id/fragment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment1"
            android:layout_marginTop="10.3px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="72px"/>

        <FrameLayout
            android:id="@+id/fragment3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment2"
            android:layout_marginTop="10.3px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"/>

        <FrameLayout
            android:id="@+id/fragment4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment3"
            android:layout_marginTop="10.3px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_date_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14px" />

    <RelativeLayout
        android:id="@+id/btnview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="30px">

        <Button
            android:id="@+id/btn_to_search_time"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_btn_pinkish_red_selector"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="16px"
            style="@style/regular" />
    </RelativeLayout>

</RelativeLayout>