<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340px"
    android:layout_height="260px"
    android:orientation="vertical"
    android:id="@+id/root">

    <RelativeLayout
        android:layout_width="340px"
        android:layout_height="180px">
        <ImageView
            android:id="@+id/iv_flight_status"
            android:layout_width="338px"
            android:layout_height="178px"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/sample_flight_status"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_flight_tab_flight_status_up_part_inside_line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11px"
            android:layout_marginLeft="10px"
            android:layout_alignParentLeft="true">
            <View
                android:layout_width="2px"
                android:layout_height="16px"
                android:layout_gravity="center_vertical"
                android:background="@color/white_four"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_four"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="7px"
                android:textSize="16px"
                android:text="@string/flight_status"
                style="@style/regular"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="340px"
        android:layout_height="80px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_flight_tab_flight_status_down_part_inside_line">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/rl_flight_status_click"
                android:layout_width="180px"
                android:layout_height="40px"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@drawable/bg_transparent_press_black20">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_flight_tab_flight_status_down_part"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_ic_flight_status_b"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_flight_status_b"/>
                    <TextView
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6.7px"
                        android:textSize="14px"
                        android:gravity="center_vertical"
                        android:textColor="@color/french_blue"
                        android:text="@string/flight_status"
                        style="@style/regular"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_share_click"
                android:layout_width="100px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_transparent_press_black20"
                android:clickable="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_flight_tab_flight_status_down_part"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_ic_share_b"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:src="@drawable/ic_share_b"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="14px"
                        android:layout_marginLeft="6.7px"
                        android:gravity="center_vertical"
                        android:textColor="@color/french_blue"
                        android:text="@string/share"
                        style="@style/regular"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>