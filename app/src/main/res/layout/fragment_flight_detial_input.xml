<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32px"
            android:background="@color/black_30">
            <TextView
                android:id="@+id/tv_item"
                android:layout_width="match_parent"
                android:layout_height="22.7px"
                android:singleLine="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_centerVertical="true"
                android:textSize="16px"
                android:gravity="center_vertical"
                android:textColor="@color/white_four"
                style="@style/regular" />

            <ImageView
                android:id="@+id/iv_garbage"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_marginRight="19px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:background="@drawable/bg_transparent_press_black20"
                android:src="@drawable/ic_garbage_w"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="6px">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="6px">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_flight_nubmer_ci"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/btn_flight_number_enable"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="CI"
                    android:textSize="18px"
                    android:textColor="@color/french_blue"
                    style="@style/regular" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_flight_nubmer_ae"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/btn_flight_number_n"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_ae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="AE"
                    android:textSize="18px"
                    android:textColor="@color/white_four"
                    style="@style/regular" />
            </RelativeLayout>




            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/fragment4"
                android:layout_marginLeft="20px"
                android:layout_marginTop="5px"
                android:layout_width="200px"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="6.3px">

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>