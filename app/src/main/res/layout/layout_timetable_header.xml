<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llayout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="33.3px"
            android:layout_height="0.7px"
            android:alpha="0.3"
            android:background="@color/white_four" />

        <TextView
            android:id="@+id/tv_depart_date"
            style="@style/regular"
            android:layout_width="206px"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:shadowColor="#4d00062c"
            android:shadowRadius="3"
            android:textColor="@color/white_four"
            android:textSize="16px" />

        <View
            android:layout_width="33.3px"
            android:layout_height="0.7px"
            android:alpha="0.3"
            android:background="@color/white_four" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_country_from"
            style="@style/light"
            android:layout_width="126.7px"
            android:layout_height="56px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:singleLine="true"
            android:textColor="@color/white_four"
            android:textSize="46.7px" />

        <TextView
            android:id="@+id/tv_country_from_detail"
            style="@style/regular"
            android:layout_width="164px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_country_from"
            android:layout_marginLeft="20px"
            android:ellipsize="end"
            android:maxHeight="38.7px"
            android:maxLines="2"
            android:minHeight="19.3px"
            android:minLines="1"
            android:singleLine="false"
            android:textColor="@color/white_four"
            android:textSize="16px" />


        <ImageView
            android:id="@+id/airplane_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28px"
            android:background="@drawable/ic_flight_from_to_4" />

        <TextView
            android:id="@+id/tv_country_to"
            style="@style/light"
            android:layout_width="126.7px"
            android:layout_height="56px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/white_four"
            android:textSize="46.7px" />

        <TextView
            android:id="@+id/tv_country_to_detail"
            style="@style/regular"
            android:layout_width="164px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_country_to"
            android:layout_marginRight="20px"
            android:ellipsize="end"
            android:gravity="right"
            android:maxHeight="38.7px"
            android:maxLines="2"
            android:minHeight="19.3px"
            android:minLines="1"
            android:singleLine="false"
            android:textColor="@color/white_four"
            android:textSize="16px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="24px"></RelativeLayout>
</LinearLayout>

