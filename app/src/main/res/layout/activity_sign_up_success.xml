<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/bg_login">

    <!-- Content -->
    <LinearLayout
        android:id="@+id/rlayout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ci.ui.view.NavigationBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56px"
            android:layout_alignParentTop="true" >
        </ci.ui.view.NavigationBar>


        <TextView
            android:id="@+id/tv_sign_up_success_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:layout_marginTop="20px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white_four"
            android:text="@string/sign_uregistration_finished_dynasty_flyer_num"
            style="@style/light" />

        <TextView
            android:id="@+id/tv_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/white_four"
            android:layout_marginTop="32.4px"
            android:text="CT1234567"
            android:layout_gravity="center_horizontal"
            style="@style/light" />

        <RelativeLayout
            android:id="@+id/rl_dynasty_flyer_card"
            android:layout_width="236px"
            android:layout_height="148px"
            android:layout_marginTop="24.3px"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_card_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_dynasty_flyer"/>

            <TextView
                android:id="@+id/tv_card_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12px"
                android:layout_marginTop="74px"
                android:textSize="11px"
                android:textColor="@color/dark_slate_blue_two"
                android:text="PENG, CHARLES\nCT 1234567\nTHRU  2012-12"
                style="@style/regular" />
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:layout_marginTop="20px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white_four"
            android:text="@string/sign_uregistration_finished_enjoy_our_service"
            style="@style/light" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_signup_back_home"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_btn_pinkish_red_selector"
        android:text="@string/back_to_home"
        android:textColor="@color/white_four"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="30px"
        android:textSize="16px"
        style="@style/regular" />

</RelativeLayout>
