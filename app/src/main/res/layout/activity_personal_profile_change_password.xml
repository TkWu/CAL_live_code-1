<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/bg_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">

    <ci.ui.view.NavigationBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/ll_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_prompt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6.7px"
            android:text="@string/change_password_prompt_msg"
            android:textColor="@color/white_four"
            android:textSize="16px"
            style="@style/light"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_textfeild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="274px"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_re_enter_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="320px"
        android:layout_height="40px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30px"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_pinkish_red_selector"
        android:text="@string/inquiry_input_box_send"
        android:textColor="@color/white_four"
        android:textSize="16px"
        android:textAllCaps="false"
        style="@style/regular"/>

</RelativeLayout>
