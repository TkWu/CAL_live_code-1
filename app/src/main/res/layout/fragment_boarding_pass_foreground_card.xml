<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10px"
    android:paddingRight="10px">

    <RelativeLayout
        android:id="@+id/rl_boarding_pass"
        android:layout_width="match_parent"
        android:layout_height="494px"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="74.5px"
            android:background="@drawable/bg_boardimg_pass_head_radius">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_head_sp"
            android:layout_width="match_parent"
            android:layout_height="74.5px"
            android:background="@drawable/bg_top_caerulea">

        </RelativeLayout>

        <!-- 已使用圖 -->
        <ImageView
            android:id="@+id/iv_used"
            android:layout_width="80.7px"
            android:layout_height="68.7px"
            android:layout_marginLeft="180.7px"
            android:layout_marginTop="5.8px"
            android:scaleType="fitXY"
            android:src="@drawable/img_used_en"/>

        <ImageView
            android:id="@+id/iv_hole"
            android:layout_width="match_parent"
            android:layout_height="12px"
            android:layout_below="@+id/rl_head"
            android:scaleType="fitXY"
            android:src="@drawable/bg_card_hole"/>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="380px"
            android:layout_below="@+id/iv_hole"
            android:background="@color/white_six">

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_name"
            style="@style/regular"
            android:layout_width="240px"
            android:layout_height="24px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="28px"
            android:text="YuRong Cheng"
            android:textColor="@color/black_one"
            android:textSize="20px"/>

        <LinearLayout
            android:id="@+id/ll_zone"
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_seat"
            android:layout_marginRight="3px"
            android:layout_marginTop="16px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_zone"
                style="@style/light"
                android:layout_width="match_parent"
                android:layout_height="15.7px"
                android:gravity="center"
                android:text="@string/zone"
                android:textColor="@color/grey_four"
                android:textSize="13px"/>

            <TextView
                android:id="@+id/tv_zone_data"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="28.7px"
                android:layout_marginTop="4px"
                android:gravity="center"
                android:text="3K"
                android:textColor="@color/french_blue"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_seat"
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4px"
            android:layout_marginTop="16px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_seat"
                style="@style/light"
                android:layout_width="match_parent"
                android:layout_height="15.7px"
                android:gravity="center"
                android:text="@string/seat"
                android:textColor="@color/grey_four"
                android:textSize="13px"/>

            <TextView
                android:id="@+id/tv_seat_data"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="28.7px"
                android:layout_marginTop="4px"
                android:gravity="center"
                android:text="3K"
                android:textColor="@color/french_blue"
                android:textSize="24px"/>
        </LinearLayout>

        <ci.ui.view.DashedLine
            android:id="@+id/dl"
            android:layout_width="319.2px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            app:dl_color="@color/greyish_two"/>

        <LinearLayout
            android:id="@+id/ll_from"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="95.7px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_from"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="23.7px"
                android:text="TPE"
                android:textColor="@color/black_one"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_from_airport"
                style="@style/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="15.3px"
                android:text="Taiwan Taoyuan Int’l"
                android:textColor="@color/black_two"
                android:textSize="13px"/>

            <TextView
                android:id="@+id/tv_from_time"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="19.3px"
                android:layout_marginTop="1px"
                android:text="08:10"
                android:textColor="@color/french_blue"
                android:textSize="16px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_to"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="95.7px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_to"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="23.7px"
                android:gravity="right"
                android:text="FUK"
                android:textColor="@color/black_one"
                android:textSize="18px"/>

            <TextView
                android:id="@+id/tv_to_airport"
                style="@style/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minHeight="15.3px"
                android:text="Fukuoka Apt"
                android:textColor="@color/black_two"
                android:textSize="13px"/>

            <TextView
                android:id="@+id/tv_to_time"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="19.3px"
                android:layout_marginTop="1px"
                android:gravity="right"
                android:text="11:20"
                android:textColor="@color/french_blue"
                android:textSize="16px"/>
        </LinearLayout>

        <!-- QR code 框線(會被置換成QR code) -->
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="160px"
            android:layout_height="160px"
            android:scaleType="fitXY"
            android:layout_marginBottom="7px"
            android:layout_alignBottom="@+id/iv_aircraft_img"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_aircraft_img"
            android:layout_width="match_parent"
            android:layout_height="255px"
            android:scaleType="fitXY"
            android:src="@drawable/bg_both_flight"
            android:layout_below="@+id/iv_hole"/>

        <RelativeLayout
            android:id="@+id/rl_vip_bg"
            android:layout_width="match_parent"
            android:layout_height="24px"
            android:layout_alignParentBottom="true"
            android:background="@color/white_eight" />

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="match_parent"
            android:layout_height="162px"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_bottom_threebears">
        </ImageView>

        <LinearLayout
            android:id="@+id/ll_boarding"
            android:layout_width="110px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="356.3px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_boarding"
                style="@style/light"
                android:layout_width="match_parent"
                android:layout_height="15.7px"
                android:text="@string/boarding"
                android:textColor="@color/grey_four"
                android:textSize="13px"/>

            <TextView
                android:id="@+id/tv_boarding_time"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginTop="1.3px"
                android:text="07:40"
                android:textColor="@color/french_blue"
                android:textSize="40px"/>

            <TextView
                android:id="@+id/tv_boarding_date"
                style="@style/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="15.7px"
                android:text="Thu, Oct 12, 2015"
                android:textColor="@color/french_blue"
                android:textSize="13px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_aircraft_no"
            style="@style/regular"
            android:layout_width="wrap_content"
            android:layout_height="19.3px"
            android:layout_alignTop="@+id/iv_qrcode"
            android:layout_centerHorizontal="true"
            android:text="CI160"
            android:textColor="@color/black_one"
            android:textSize="16px"
            android:translationY="-9px"/>

        <!-- 新增 TSA PRE Tag -->
        <TextView
            android:id="@+id/tv_tsa_pre"
            style="@style/regular"
            android:layout_width="59.6px"
            android:layout_height="15.7px"
            android:gravity="center"
            android:text="@string/boarding_pass_tsa_pre_tag"
            android:textColor="@color/black_one"
            android:background="@color/white_four"
            android:textSize="13px"
            android:layout_alignBottom="@+id/iv_aircraft_img"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/ll_terminal"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170px"
            android:layout_marginTop="356.3px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_terminal"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="15.7px"
                    android:text="@string/boarding_pass_terminal"
                    android:textColor="@color/grey_four"
                    android:textSize="13px"/>

                <TextView
                    android:id="@+id/tv_terminal_data"
                    style="@style/light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:minHeight="15.7px"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@color/black_one"
                    android:textSize="13px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:orientation="horizontal"
                android:gravity="left|center">

                <TextView
                    android:id="@+id/tv_gate"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="15.7px"
                    android:text="@string/boarding_pass_gate"
                    android:textColor="@color/grey_four"
                    android:textSize="13px"/>

                <TextView
                    android:id="@+id/tv_gate_data"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:minHeight="15.7px"
                    android:singleLine="true"
                    android:text="C1"
                    android:textColor="@color/black_one"
                    android:textSize="22px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_class"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="15.7px"
                    android:text="@string/cabin_class"
                    android:textColor="@color/grey_four"
                    android:textSize="13px"/>

                <TextView
                    android:id="@+id/tv_class_data"
                    style="@style/light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:minHeight="15.7px"
                    android:singleLine="true"
                    android:text="Economy (Zone1)"
                    android:textColor="@color/black_one"
                    android:textSize="13px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_seq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_seq"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="15.7px"
                    android:text="@string/seq"
                    android:textColor="@color/grey_four"
                    android:textSize="13px"/>

                <TextView
                    android:id="@+id/tv_seq_data"
                    style="@style/light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:minHeight="15.7px"
                    android:singleLine="true"
                    android:text="096"
                    android:textColor="@color/black_one"
                    android:textSize="13px"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_vip"
            android:layout_width="match_parent"
            android:layout_height="24px"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_vip"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_vip_g"/>

                <TextView
                    android:id="@+id/tv_vip"
                    style="@style/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6px"
                    android:text="Lounge - EMER"
                    android:textColor="@color/black_two"
                    android:textSize="13px"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="match_parent"
        android:layout_height="32px"
        android:background="@drawable/bg_personal_member_card_detail_bosy">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="130px"
            android:layout_height="20px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:scaleType="fitXY"
            android:src="@drawable/logo_china_airlines_boarding_pass" />

        <LinearLayout
            android:id="@+id/ll_sky"
            android:layout_width="72px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_boarding_pass_sky"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_sky"
                android:layout_width="56px"
                android:layout_height="16px"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/img_sky_priority" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>