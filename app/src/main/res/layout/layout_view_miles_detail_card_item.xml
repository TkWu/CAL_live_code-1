<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.4"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/bg_passenger_card_line_50" />

    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_below="@+id/vline">

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="Taipei to Los Angeles"
            android:textColor="@color/grey_four"
            android:textSize="16px"
            style="@style/light" />

        <TextView
            android:id="@+id/tv_info_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_marginRight="20px"
            android:layout_marginTop="4px"
            android:text="Sep 10, 2015"
            android:textColor="@color/black_one"
            android:textSize="16px"
            style="@style/light" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.4"
        android:layout_below="@+id/rlayout"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/bg_passenger_card_line_50"
        android:visibility="gone" />

</RelativeLayout>
