<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_bg"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/french_blue"
    android:elevation="10dp">

    <RelativeLayout
        android:id="@+id/rl_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/img_personal"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_personal" />

        <TextView
            android:id="@+id/tv_title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white_four"
            android:textSize="20sp"
            android:visibility="gone"
            style="@style/light"/>

        <ImageButton
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/logo_china_airlines" />

        <ImageButton
            android:id="@+id/img_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu" />

        <ImageButton
            android:id="@+id/iv_setting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_settings"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_menu"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_other_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white_four"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/light"/>

        <ImageButton
            android:id="@+id/img_logo_ii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/logo_china_airlines"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/img_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_garbage_w_96"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/img_about"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_about_n"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_30" />
</RelativeLayout>
